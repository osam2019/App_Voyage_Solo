<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/fab_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/blog_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorText" />

        <TextView
            android:id="@+id/blog_view_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorText" />

        <ImageView
            android:layout_marginTop="@dimen/fab_margin"
            android:id="@+id/blog_view_image_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />

        <ImageView
            android:id="@+id/blog_view_image_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_margin"
            android:adjustViewBounds="true" />

        <ImageView
            android:id="@+id/blog_view_image_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_margin"
            android:adjustViewBounds="true" />

        <ImageView
            android:id="@+id/blog_view_image_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_margin"
            android:adjustViewBounds="true" />

        <ImageView
            android:id="@+id/blog_view_image_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_margin"
            android:adjustViewBounds="true" />

        <TextView
            android:layout_marginTop="@dimen/fab_margin"
            android:id="@+id/blog_view_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorText" />

    </LinearLayout>


</ScrollView>