<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#eee"
                android:orientation="vertical"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="1dp"
                    android:background="#fff"
                    android:paddingLeft="@dimen/fab_margin"
                    android:paddingRight="@dimen/fab_margin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/card_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Post title"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/colorText"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/card_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Post date"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/colorText"
                            android:textSize="13dp" />
                    </LinearLayout>

                </RelativeLayout>

                <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/card_images"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/card_1_image"
                        android:layout_width="match_parent"
                        android:layout_height="360dp" />

                    <LinearLayout
                        android:id="@+id/card_2_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/card_2_image_1"
                            android:layout_width="match_parent"
                            android:layout_height="360dp"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/card_2_image_2"
                            android:layout_width="match_parent"
                            android:layout_height="360dp"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/card_3_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/card_3_image_1"
                            android:layout_width="match_parent"
                            android:layout_height="360dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY" />

                        <LinearLayout
                            android:id="@+id/card_3_image_right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/card_3_image_2"
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:layout_weight="1"
                                android:scaleType="fitXY" />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/card_3_image_3"
                                    android:layout_width="match_parent"
                                    android:layout_height="180dp"
                                    android:scaleType="fitXY" />

                                <TextView
                                    android:id="@+id/card_more"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#70C0C0C0"
                                    android:gravity="center"
                                    android:text="+1"
                                    android:textColor="#FFFFFF"
                                    android:textSize="70dp" />

                            </FrameLayout>

                        </LinearLayout>
                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ddd"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:background="#fff"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/card_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Post contents"
                        android:textColor="@color/colorText" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>