<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/fab_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/calendar_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="MONTH"
        android:textColor="@color/colorPrimary"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/calendar_view"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:compactCalendarCurrentDayBackgroundColor="@color/colorAccent"
        app:compactCalendarCurrentDayTextColor="#FFFFFF"
        app:compactCalendarCurrentSelectedDayBackgroundColor="@color/colorPrimary"
        app:compactCalendarCurrentSelectedDayTextColor="#FFFFFF"
        app:compactCalendarMultiEventIndicatorColor="@color/colorText"
        app:compactCalendarTargetHeight="250dp"
        app:compactCalendarTextColor="@color/colorText"
        app:compactCalendarTextSize="12sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="344dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00F1EBEB"
            android:gravity="fill"
            android:text="codingclass"
            android:onClick="gotoMoney"
            android:textAllCaps="false" />

        <ListView
            android:id="@+id/event_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">

        </ListView>
    </LinearLayout>

    <Button
        android:id="@+id/back"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="?attr/colorPrimary"
        android:onClick="gotohome"
        android:text="←"
        android:textSize="36sp"
        android:textStyle="bold" />

</LinearLayout>